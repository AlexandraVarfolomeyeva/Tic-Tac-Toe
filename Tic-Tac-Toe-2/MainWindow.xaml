<Window x:Class="Tic_Tac_Toe_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_Tac_Toe_2"
        mc:Ignorable="d"
        Title="Крестики-нолики" Height="381.084" Width="573.498">
    <Grid HorizontalAlignment="Left" Width="553" Margin="10,10,0,-5.6" Height="346" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="GameField" HorizontalAlignment="Left" Height="300" Margin="10,22,0,0" VerticalAlignment="Top" Width="300" Background="LightCyan" MouseDown="GameField_MouseDown"/>
        <TextBlock x:Name="log" HorizontalAlignment="Left" Height="251" Margin="339,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Background="#FFF5FDFD" Grid.ColumnSpan="2"/>
        <Button x:Name="ClearBtn" Content="Очистить поле" HorizontalAlignment="Left" Margin="339,22,0,0" VerticalAlignment="Top" Width="190" Background="#FFBCF0F1" Click="ClearBtn_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
